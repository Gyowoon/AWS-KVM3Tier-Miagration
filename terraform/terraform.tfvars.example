#===============================================================================
# terraform.tfvars.example - 변수 값 예제
#===============================================================================
# 사용법: 이 파일을 terraform.tfvars로 복사 후 실제 값으로 수정
#   cp terraform.tfvars.example terraform.tfvars
#===============================================================================

#---------------------------------------
# 기본 설정
#---------------------------------------
aws_region   = "ap-northeast-2"
aws_profile  = "terraform-admin"
project_name = "portfolio"
environment  = "dev"

#---------------------------------------
# 네트워크 설정
#---------------------------------------
vpc_cidr = "10.0.0.0/16"

subnet_cidrs = {
  public_a  = "10.0.1.0/24"
  private_a = "10.0.2.0/24"
  public_c  = "10.0.3.0/24"
  private_c = "10.0.4.0/24"
}

availability_zones = ["ap-northeast-2a", "ap-northeast-2c"]

#---------------------------------------
# EC2 설정
#---------------------------------------
ec2_instance_type = "t3.micro"
ec2_key_name      = "your-key-name"  # ← 변경 필요

# SSH 접속 허용 IP (확인: curl -s ifconfig.me)
my_ip = "0.0.0.0/32"  # ← 변경 필요 (예: "203.0.113.50/32")

#---------------------------------------
# RDS 설정
#---------------------------------------
db_instance_class    = "db.t3.micro"
db_name              = "myappdb"
db_username          = "postgres"
db_password          = "ChangeMe123!"  # ← 변경 필요 (강력한 비밀번호 사용)
db_allocated_storage = 20

#---------------------------------------
# ALB 설정
#---------------------------------------
health_check_path = "/"
