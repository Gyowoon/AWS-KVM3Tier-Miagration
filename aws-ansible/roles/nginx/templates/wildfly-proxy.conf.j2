#===============================================================================
# roles/nginx/templates/wildfly-proxy.conf.j2
#===============================================================================
# 역할: Nginx → Internal ALB 리버스 프록시 설정
# 트래픽 흐름: Client → External ALB → Nginx → Internal ALB → WildFly
#===============================================================================

#---------------------------------------
# Upstream 정의 (Internal ALB)
#---------------------------------------
upstream wildfly_backend {
    # Internal ALB DNS
    # Terraform output: internal_alb_dns
    server {{ internal_alb_dns }}:{{ upstream_port }};
    
    # 연결 유지 (성능 향상)
    keepalive 32;
}

#---------------------------------------
# Server Block
#---------------------------------------
server {
    listen 80;
    server_name _;
    
    # 액세스 로그
    access_log {{ nginx_access_log }} main;
    error_log {{ nginx_error_log }} warn;
    
    #---------------------------------------
    # 헬스체크 경로 (ALB용)
    #---------------------------------------
    location /health {
        access_log off;
        return 200 'OK';
        add_header Content-Type text/plain;
    }
    
    #---------------------------------------
    # 메인 프록시 설정
    #---------------------------------------
    location / {
        proxy_pass http://wildfly_backend;
        
        # 프록시 헤더 설정
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 타임아웃 설정
        proxy_connect_timeout {{ proxy_connect_timeout }}s;
        proxy_send_timeout {{ proxy_send_timeout }}s;
        proxy_read_timeout {{ proxy_read_timeout }}s;
        
        # 버퍼 설정
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        
        # HTTP 1.1 사용 (keepalive 지원)
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }
    
    #---------------------------------------
    # 에러 페이지
    #---------------------------------------
    error_page 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
        internal;
    }
}
